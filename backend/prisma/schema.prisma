// prisma/schema.prisma (Versi dengan Otentikasi)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// [BARU] Membuat model untuk Pengguna
model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique // Setiap email harus unik
  password  String   // Kita akan menyimpan password yang sudah di-hash
  createdAt DateTime @default(now())

  // Relasi: Satu user bisa membuat banyak thread dan komentar
  threads   Thread[]
  comments  Comment[]
}

model Thread {
  id            String   @id @default(cuid())
  title         String
  category      String
  content       String
  views         Int      @default(0)
  likes         Int      @default(0)
  dislikes      Int      @default(0)
  commentsCount Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  comments      Comment[]
  
  // [DIUBAH] Menghubungkan thread ke pembuatnya (User)
  author        User     @relation(fields: [authorId], references: [id])
  authorId      String
}

model Comment {
  id        String   @id @default(cuid())
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  thread    Thread   @relation(fields: [threadId], references: [id])
  threadId  String
  
  // [DIUBAH] Menghubungkan komentar ke pembuatnya (User)
  author    User     @relation(fields: [authorId], references: [id])
  authorId  String
}